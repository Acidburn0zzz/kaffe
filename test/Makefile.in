srcdir=		@srcdir@

all:

test:
		@echo "*** Running tests"
		@DESTDIR=`pwd` ; export DESTDIR ;\
		. ../ENVIRONMENT ;\
		cd $(srcdir)/regression &&\
		if ./TestScript ; then \
			echo "*** Passed" ; \
			exit 0 ;\
		else \
			echo "*** Failed" ; \
			exit 1 ;\
		fi

testthreads:
		@echo "*** Running tests for new threading system"
		@DESTDIR=`pwd` ; export DESTDIR ;\
		. ../ENVIRONMENT ;\
		cd $(srcdir)/regression &&\
		if ./TestScriptThread ; then \
			echo "*** Passed" ; \
			exit 0 ;\
		else \
			echo "*** Failed" ; \
			exit 1 ;\
		fi

clean:
		rm -f *.class Kaffe.core core ExceptionTest

distclean:	clean
		rm -f Makefile

install:

derived-files:

depend:

