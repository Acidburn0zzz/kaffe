@VPATHOPT@=	@srcdir@
srcdir=		@srcdir@
prefix=		@prefix@
exec_prefix=	@exec_prefix@
libdir=		@libdir@
CC=		@CC@
LD=		@LD@
AR=		@AR@
RANLIB=		@RANLIB@
INCLUDES=	-I$(srcdir) -I../../../include -I$(srcdir)/../../../include -I../../../config -I$(srcdir)/../../../config
CFLAGS=		@CFLAGS@
ALL_CFLAGS=	$(CFLAGS) $(INCLUDES) $(EXTRA_CFLAGS)
INSTALL=	@INSTALL@
INSTALL_DATA=	@INSTALL_DATA@
MKDIR=		@MKDIR@
LN=		@LN_S@
DLLTOOL=	@DLLTOOL@
DEPTOOL=	@DEPTOOL@
PIC=		@PIC@
LDFLAGS=	@LIBSHARE@
LIBS=		@LIBS@
LDTAIL=		@LDTAIL@ @STD_LIBRARIES@ @ZIP_LIBRARIES@
KVER=		@KVER@
OBJEXT=		@OBJEXT@
LIBEXT=		@LIBEXT@

LIBNAME=	libzip
LIB=		$(LIBNAME)$(LIBEXT).$(KVER)
LLIB=		$(LIBNAME)$(LIBEXT)

WRAPPER_CMD=	"s%^\(java_[^(]*\).*$$%KAFFE_NATIVE(\1)%p"

OBJECT.UTIL.ZIP=\
		Adler32$(OBJEXT) \
		CRC32$(OBJEXT) \
		Deflater$(OBJEXT) \
		Inflater$(OBJEXT)

OBJECT=		$(OBJECT.UTIL.ZIP)

DEPENDS=        $(OBJECT:@OBJEXT@=.d)

all:		$(LLIB)

$(LLIB):        $(LIB)
		rm -f $(LLIB)
		$(LN) $(LIB) $(LLIB)

$(LIB):		$(OBJECT) lib.exp
		@LINKLIB@

.c$(OBJEXT):
		$(CC) $(ALL_CFLAGS) -c $(PIC) $< -o $*.o

wrappers:
		sed -n $(WRAPPER_CMD) *.c > external_wrappers.h

.SUFFIXES: .d
 
 .c.d: 
		$(DEPTOOL) $(ALL_CFLAGS) $< > $@

clean:
		rm -f $(LLIB) $(LIB) $(OBJECT) lib.exp
		rm -f $(DEPENDS) .depend   
		touch .depend

distclean:	clean
		rm -f Makefile .depend

install:
		test -d $(libdir) || $(MKDIR) $(libdir)
		$(INSTALL_DATA) $(LIB) $(libdir)/$(LIB)
		rm -f $(libdir)/$(LLIB)
		$(LN) $(LIB) $(libdir)/$(LLIB)

depend:         $(DEPENDS)
		rm -f .depend
		cat $(DEPENDS) > .depend

lib.exp:
		$(DLLTOOL) --def $(srcdir)/$(LIBNAME).def --output-exp lib.exp --output-lib $(LIBNAME).a --dllname $(LLIB)
		touch lib.exp

@INC_DEPEND@
